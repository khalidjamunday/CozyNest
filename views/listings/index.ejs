<% layout("/layouts/boilerplate") %>
<body>
    <h3>All Listings</h3>
    <!-- <form method="GET" action="/listings/new"><
        <button>Create New Listing  </button>
    </form> NO NEED BCOZ BOOTSTRAP SE NAVBAR M KRLYA-->

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
        <% for(let listing of alllistings) { %>
            <!-- card in a tag on clicking full info get's displayed -->
            <a href="/listings/<%= listing._id %>" class="listing-link">
                <div class="card col listing-card"> <!--col class blwline diff size of image style height so it applies to all-->
                    <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
                    <div class="card-img-overlay"></div> <!--see form bs in cards-->
                    <div class="card-body">
                        <p class="card-text">
                        <b><%= listing.title %></b> <br>
                        &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
                        <i class="tax-info"> &nbsp; &nbsp;+18% GST</i>
                    </p>
                    </div>
                </div>
            </a>
        <% } %>
    </div>

