<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
  <div class="col-8 offset-2">
      <h3 class="mt-3 mb-2">Create a New Listing</h3>
      <form action="/listings" method="POST">
          <div class="mb-3">
              <label for="title" class="form-label">Title</label>
              <!-- listing.title also works -->
              <input name="listing[title]"type="text" class="form-control" placeholder="Add a catchy title">
          </div>
          <div class="mb-3">
              <label for="description" class="form-label">Description</label>
              <textarea name="listing[description]" class="form-control" required></textarea>
          </div>
          <div class="mb-3">
              <label for="image" class="form-label">Enter Image URL</label>
              <input name="listing[image[url]]" type="text" class="form-control" placeholder="Enter URL" >
          </div>
          <div class="row"><!--ek row m do cheeze-->

              <div class="mb-3 col-md-4">
                  <label for="price" class="form-label">Price</label>
                  <input name="listing[price]" placeholder="1200" class="form-control">
              </div>
              <div class="mb-3 col-md-8">
                  <label for="country" class="form-label">Country</label>
                  <input name="listing[country]" placeholder="India" type="text" class="form-control">
              </div>

          </div>
          <div class="mb-3">
              <label for="location" class="form-label">Location</label>
              <input name="listing[location]" placeholder="Jaipur, Rajasthan" type="text" class="form-control">
          </div>

          <button class="btn btn-dark my-3 add-btn">Add</button>

      </form>
  </div>
</div>
